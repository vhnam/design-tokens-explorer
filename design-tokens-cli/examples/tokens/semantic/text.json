{
  "text": {
    "heading": {
      "h1": {
        "fontSize": {
          "$type": "dimension",
          "$value": "{fontSize.3xl}"
        },
        "fontWeight": {
          "$type": "number",
          "$value": "{fontWeight.bold}"
        },
        "color": {
          "$type": "color",
          "$value": "{color.gray.900}"
        }
      },
      "h2": {
        "fontSize": {
          "$type": "dimension",
          "$value": "{fontSize.2xl}"
        },
        "fontWeight": {
          "$type": "number",
          "$value": "{fontWeight.semibold}"
        },
